{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "@types"],
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": false
  },
  "exclude": ["node_modules", "dist", "helpers/index.ts"],
  "include": ["index.ts", "helpers/**/*.ts"]
}
